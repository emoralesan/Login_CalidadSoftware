---
import Layout from "../layouts/Layout.astro";
export const prerender = false;
---

<Layout>
    <div class="w-full max-w-sm bg-white/40 backdrop-blur-xl border border-white/20 rounded-3xl shadow-[0_8px_32px_0_rgba(0,0,0,0.25)] p-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-black text-center mb-6">Login</h1>

    <form id="loginForm" class="flex flex-col gap-4 w-full">
      <div class="flex flex-col">
        <label for="email" class="text-sm font-medium text-gray-700">Email</label>
        <input id="email" type="email" required  class="border p-2 pr-10 rounded-lg w-full focus:bg-white focus:border-blue-500 outline-none" placeholder="user@email.com"/>
      </div>
      <div class="flex flex-col relative">
        <label for="password" class="text-sm font-medium text-gray-700">Password</label>
        <input id="password" type="password" required  class="border p-2 pr-10 rounded-lg w-full focus:bg-white focus:border-blue-500 outline-none" placeholder="······"/>
        <button type="button" id="togglePassword" class="absolute right-2 top-10 transform -translate-y-1/2 text-gray-500 hover:text-gray-800">
          <svg id="eyeOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          <svg id="eyeClosed" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477 0-8.268-2.943-9.542-7a10.05 10.05 0 012.007-3.592M6.18 6.18A9.96 9.96 0 0112 5c4.478 0 8.268 2.943 9.542 7a9.96 9.96 0 01-4.46 5.568M15 12a3 3 0 00-3-3m3 3a3 3 0 01-3 3m0-3a3 3 0 00-3-3m3 3a3 3 0 01-3 3M3 3l18 18"/>
          </svg>
        </button>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded mt-2 hover:bg-blue-700"> Enter </button>
    </form>
  </div>

  <script type="module">
    import { initLoginForm } from "../src/scripts/login.ts";
    initLoginForm();
  </script>

  <script>
    const input = document.getElementById("password") as HTMLInputElement | null;
    const btn = document.getElementById("togglePassword") as HTMLButtonElement | null;
    const eyeOpen = document.getElementById("eyeOpen") as SVGSVGElement | null;
    const eyeClosed = document.getElementById("eyeClosed") as SVGSVGElement | null;

    if (input && btn && eyeOpen && eyeClosed) {
    btn.addEventListener("click", () => {
        const isHidden = input.type === "password";
        input.type = isHidden ? "text" : "password";
        eyeOpen.classList.toggle("hidden", !isHidden);
        eyeClosed.classList.toggle("hidden", isHidden);
    });
    }
  </script>
</Layout>
