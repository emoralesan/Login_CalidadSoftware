{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@libs": ["src/libs/index.ts"],
      "@libs/*": ["src/libs/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.astro",
    ".astro/types.d.ts"
  ],
  "exclude": ["dist"]
}
